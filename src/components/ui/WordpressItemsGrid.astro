---
import Item from "../widgets/WordpressItem.astro"
import { twMerge } from 'tailwind-merge';
import type { ItemGrid } from '@/types';


const { path, title, items = [], columns} = Astro.props as ItemGrid;


---

{
  items && (
    <div class="space-y-10">
      <div>
        <h2 class="text-2xl font-[500]">{title && title}</h2>
      </div>
      <div
        class={twMerge(
          `grid mx-auto gap-8 md:gap-y-12 ${
            columns === 4
              ? 'lg:grid-cols-4 md:grid-cols-3 sm:grid-cols-2'
              : columns === 3
              ? 'lg:grid-cols-3 sm:grid-cols-2'
              : columns === 2
              ? 'sm:grid-cols-2 '
              : ''
          }`,
        )}
      >
        {items.map((item) => (
          <Item path={path} item={item}/>
        ))}
      </div>
    </div>
  
  )
}
