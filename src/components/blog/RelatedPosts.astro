---
import { APP_BLOG } from "~/utils/config";

import { fetchPosts, getRelatedPosts } from "~/utils/blog";
import BlogHighlightedPosts from "../widgets/BlogHighlightedPosts.astro";
import { getStorePermaLink } from "~/utils/permalinks";
import type NormalizedPost from "~/interfaces/NormalizedPost";

export interface Props {
  post: NormalizedPost;
}

const { post } = Astro.props;
const fetchedPosts = await fetchPosts();
const relatedPosts = post.tags ? getRelatedPosts(fetchedPosts, post.slug, post.tags) : [];
---

{
  APP_BLOG.isRelatedPostsEnabled ? (
    <BlogHighlightedPosts
      classes={{ container: "pt-0 lg:pt-0 md:pt-0" }}
      title="Related Posts"
      linkText="View All Posts"
      linkUrl={getStorePermaLink()}
      postIds={relatedPosts.map((post) => post.id)}
    />
  ) : null
}
