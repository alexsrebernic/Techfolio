---
import Item from '~/components/blog/ListItem.astro';
import type NormalizedPost from '~/interfaces/NormalizedPost';

export interface Props {
  posts: Array<NormalizedPost>;
}

const { posts } = Astro.props;
---

<ul>
  {
    posts.map((post) => (
      <li class="mb-12 md:mb-20">
        <Item post={post} />
      </li>
    ))
  }
</ul>
