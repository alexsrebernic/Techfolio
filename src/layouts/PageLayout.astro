---
import {Sidebar} from '@/components/widgets/Sidebar/Sidebar.tsx';
import Layout from '@/layouts/Layout.astro';
import SidebarAuthorQuery from '@/graphql/SidebarAuthorQuery';
import { wpquery } from '@/data/wordpress';
import type { MetaData } from '@/types';
import ToggleTheme from '@/components/common/ToggleTheme.astro'
export interface Props {
  metadata?: MetaData;
}

const { metadata } = Astro.props;
const authorSidebarData = (await wpquery({query: SidebarAuthorQuery})).owners.edges[0].node.author
---

<Layout metadata={metadata}>
  <slot name="announcement">
  </slot>
  <div class="flex flex-col md:flex-row min-h-[80vh]">
    <Sidebar author={authorSidebarData} client:only="react" transition:persist  >
      <ToggleTheme />
    </Sidebar>
    <div class="md:pl-[80px] sidebar:pl-[300px] flex-1 px-2">
      <main class="w-full   h-full bg-white dark:bg-[#1A1A1A]  rounded-xl shadow-md md:m-2">
        <div class="md:w-[80%] pt-4 md:pt-12 px-4 pb-4 md:pb-20 md:px-0  lg:pt-24 lg:w-[60%] mx-auto">
          <slot />
        </div>
      </main>
    </div>
   
  </div>
  <slot name="footer">
  </slot>
</Layout>
